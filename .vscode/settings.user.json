{
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "css.format.enable": true,
    "css.validate": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.organizeImports": "always"
    },
    "editor.cursorBlinking": "smooth",
    "editor.cursorStyle": "line",
    "editor.fontFamily": "system-ui, -apple-system, sans-serif",
    "editor.fontLigatures": true,
    "editor.fontSize": 10.75,
    "editor.fontVariations": true,
    "editor.fontWeight": 500,
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.formatOnType": false,
    "editor.insertSpaces": true,
    "editor.letterSpacing": 0.25,
    "editor.lineHeight": 1.2,
    "editor.minimap.enabled": true,
    "editor.parameterHints.enabled": true,
    "editor.quickSuggestions": {
        "comments": true,
        "other": true,
        "strings": true
    },
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "boundary",
    "editor.scrollBeyondLastLine": false,
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.tabSize": 2,
    "editor.wordBasedSuggestions": "allDocuments",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 80,
    "files.associations": {
        "*.cjs": "javascript",
        "*.css": "css",
        "*.htm": "html",
        "*.html": "html",
        "*.js": "javascript",
        "*.json": "json",
        "*.json5": "json5",
        "*.jsonc": "jsonc",
        "*.jsx": "javascriptreact",
        "*.md": "markdown",
        "*.mjs": "javascript",
        "*.svg": "svg",
        "*.ts": "typescript",
        "*.tsx": "typescriptreact",
        "*.txt": "plaintext",
        "*.xml": "xml",
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "html.format.enable": true,
    "html.validate.scripts": true,
    "html.validate.styles": true,
    "javascript.format.enable": true,
    "javascript.validate.enable": true,
    "json.format.enable": true,
    "json.format.keepLines": true,
    "json.validate.enable": true,
    "markdown.math.enabled": true,
    "markdown.validate.enabled": true,
    "terminal.integrated.fontFamily": "'Nimbus Mono PS', 'Courier New', monospace",
    "terminal.integrated.fontSize": 10.5,
    "terminal.integrated.letterSpacing": 0.5,
    "terminal.integrated.lineHeight": 1.2,
    "typescript.format.enable": true,
    "workbench.colorTheme": "Kary Pro Colors Ôºç Dark",
    "workbench.iconTheme": "kary-pro-colors-icons",
    "workbench.productIconTheme": "icons-carbon",
    "workbench.startupEditor": "none",
    "terminal.integrated.sendKeybindingsToShell": true
}
